@model VirtualJam.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

<div id="content">

    <p class="alert alert-info">
        Passwords must be at least @Membership.MinRequiredPasswordLength characters long.
    </p>
    
    @using (Html.BeginForm((string)ViewBag.FormAction, "account", FormMethod.Post, new {@class="form-horizontal"}))
    {
        @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")

        <div>
            <fieldset>
                <legend><span style="font-family: serif;">Create New Account</span></legend>
            
                <div class="control-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "control-label margin10-right" })
                    <div class="controls no-margin">
                        @Html.TextBoxFor(m => m.UserName)
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-error" })
                    </div>
                </div>

                <div class="control-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label margin10-right" })
                    <div class="controls no-margin">
                        @Html.TextBoxFor(m => m.Email)
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-error" })
                    </div>
                </div>

                <div class="control-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label margin10-right" })
                    <div class="controls no-margin">
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-error" })
                    </div>
                </div>

                <div class="control-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new {@class="control-label margin10-right"})
                    <div class="controls no-margin">
                        @Html.PasswordFor(m => m.ConfirmPassword)
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-error" })
                    </div>
                </div>

                <div class="control-group">
                    <div class="controls">
                        <input class="btn" style="margin-left: -10px;" type="submit" value="Register" />
                    </div>
                </div>
            </fieldset>
        </div>
    }
</div>